{
    "name": "foobar-client",
    "private": true,
    "version": "0.0.0",
    "author": "nevz",
    "type": "module",
    "license": "ISC",
    "scripts": {
        "dev": "vite",
        "build": "vite build --outDir dist/static && npm run build:client && npm run build:server && node generateHTML",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
        "generate": "vite build --outDir dist/static && npm run build:server && node generateHTML",
        "format": "prettier src/**/*.{ts,tsx} --write",
        "eslint": "eslint src/**/*.{tsx,ts}",
        "stylelint": "stylelint src/**/*.{tsx,ts}",
        "lint": "npm run eslint && npm run stylelint && tsc",
        "lint:fix": "npm run eslint -- --fix && npm run stylelint -- --fix && npm run format",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.2",
        "styled-components": "^6.0.7",
        "stylelint-config-recommended": "^13.0.0",
        "stylelint-order": "^6.0.3",
        "stylelint-z-index-value-constraint": "^1.3.0"
    },
    "devDependencies": {
        "@stylelint/postcss-css-in-js": "^0.38.0",
        "@types/node": "^20.4.8",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "@vitejs/plugin-react": "^4.0.3",
        "babel-plugin-styled-components": "^2.1.4",
        "eslint": "^8.46.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "prettier": "^3.0.1",
        "stylelint": "^15.10.2",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vite-plugin-babel": "^1.1.3",
        "vite-tsconfig-paths": "^4.2.0"
    }
}
